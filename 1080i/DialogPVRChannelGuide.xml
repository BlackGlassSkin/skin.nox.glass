							<left>740</left>
							<top>-8</top>
							<width>350</width>
							<height>60</height>
							<font>font12</font>
							<align>right</align>
							<textcolor>$VAR[ThemeLabelColor]</textcolor>
							<label>[B]$VAR[ItemDurationVar][/B]</label>
						</control>
					</control>
					<control type="label">
						<left>10</left>
						<top>26</top>
						<width>880</width>
						<height>60</height>
						<font>font12</font>
						<label>$VAR[SeasonLabel]$VAR[EpisodeLabel, - ]</label>
